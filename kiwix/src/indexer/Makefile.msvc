CC=cl.exe
LD=link.exe

# Global paths
ZIM=../dependencies/zimlib-1.2
ICU=../dependencies/icu
XAPIAN=../dependencies/xapian-core-1.2.3
ARGTABLE=../dependencies/argtable2-13
PTHREAD=../dependencies/pthread-win32

# Include paths
ZIM_INCLUDE=${ZIM}/include
ICU_INCLUDE=${ICU}/include
XAPIAN_INCLUDE=${XAPIAN}/include
ARGTABLE_INCLUDE=${ARGTABLE}/src
PTHREAD_INCLUDE=${PTHREAD}/include

# Lib paths
ZIM_LIB=${ZIM}/src
ICU_LIB=${ICU}/lib
XAPIAN_LIB=${XAPIAN}/win32/Release/libs
ARGTABLE_LIB=${ARGTABLE}/src
PTHREAD_LIB=${PTHREAD}/lib

# Compiler and linker flags
CFLAGS=-D"XP_WIN" -D"__GNU_LIBRARY__" -D"(__STDC__)" -D"__STDC__"  -D"XP_WIN32" -O2 -Oi -I"${XAPIAN_INCLUDE}" -I"${ZIM_INCLUDE}" -I"${PTHREAD_INCLUDE}" -I${ARGTABLE_INCLUDE} -I$(ICU_INCLUDE) -I../common/ -I"${ZIM_INCLUDE}/win" -D"_WINDLL" -D"_MBCS" -FD -EHsc -MT -Gy -nologo -c -Zi -TP

LDFLAGS=-nologo -LIBPATH:"$(PTHREAD_LIB)" -LIBPATH:"${ZIM_LIB}" -LIBPATH:"$(ICU_LIB)" -LIBPATH:"$(XAPIAN_LIB)" -LIBPATH:"${ARGTABLE_LIB}"

all: kiwix-index.exe

objs:
	$(CC) $(CFLAGS) kiwix-index.cpp ../common/stringTools.cpp ../common/otherTools.cpp ../common/pathTools.cpp ../common/resourceTools.cpp ../common/kiwix/indexer.cpp ../common/kiwix/reader.cpp ../common/kiwix/xapian/myhtmlparse.cc ../common/kiwix/xapian/htmlparse.cc ../common/kiwix/xapianIndexer.cpp

kiwix-index.exe: objs
	$(LD) -OUT:"kiwix-index.exe" -FORCE:MULTIPLE -NOLOGO $(LDFLAGS) -NODEFAULTLIB:"MSVCRT" -OPT:REF -OPT:ICF -DYNAMICBASE -NXCOMPAT -MACHINE:X86 zim.lib argtable2.lib libcommon.lib libbackend.lib libbrass.lib Rpcrt4.lib libbrassbtreecheck.lib libbrassbtreecheck.lib libexpand.lib libflint.lib libflintbtreecheck.lib libchert.lib libweight.lib libinmemory.lib libmulti.lib libmatcher.lib libnet.lib liblanguages.lib libapi.lib libremote.lib libunicode.lib libqueryparser.lib icuin.lib icuio.lib icule.lib iculx.lib icutu.lib icuuc.lib pthreadVC2.lib libcmt.lib ws2_32.lib DelayImp.lib winmm.lib Shlwapi.lib *.obj